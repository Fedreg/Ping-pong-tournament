* 
    font-family 'Overpass', sans-serif

body
    text-align center
    background-color #444
    color #bbb

.title
    margin 20px
    font-size 30px
    text-align center

.player-start-bar
    width 90%
    display flex
    justify-content center
    margin 10px
    
.player-icon
    width 200px
    height 40px
    transition all 1s
    margin 8px
    border 1px solid #666
    border-radius 5px
    font-size 14px
    color #bbb
    background-color #333
    
.button
    width 200px
    height 50px
    margin 50px auto
    border 1px solid #666
    font-size 18px
    color white
    background-color #444
 
.winner
    color lightgreen
    height 75px
    
.semifinalists
    position absolute
    display flex
    flex-direction column
    top 300px
    left 300px
    
.finalists
    position absolute
    display flex
    flex-direction column
    top 400px
    left 600px
    
.champion
    position absolute
    top 300px
    left 400px
    height 150px
    width 500px
    padding 50px
    color white
    font-size 50px
    text-transform uppercase
    background-color purple
    
     
.player-brackets
    width 90%
    display flex
    flex-orientation column
    justify-content center
    margin 10px
    
.alt
    margin-bottom 50px
    background-color #222